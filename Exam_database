    public void getcoursecode() throws SQLException {
    	Connection conex=null;
    	PreparedStatement pstmt = null;
        ResultSet result=null;
    
    	try{
    		Class.forName("com.mysql.jdbc.Driver");
     	    setconnection();
    		Set keys = exams.keySet();
    		for (Iterator i = keys.iterator(); i.hasNext(); ){
    			String key = (String) i.next();
    			String [] list= key.split(" ",2);
    			String value =  exams.get(key);
    			String lastCrawlDate= value;
    			Date utilDate = new SimpleDateFormat("dd.MM.yyyy").parse(lastCrawlDate);		
    			java.sql.Date sqlDate = new java.sql.Date(utilDate.getTime()); 
    			PreparedStatement p = (PreparedStatement) connection.prepareStatement("INSERT INTO Exam(coursecode,coursename,exam_date) VALUES(?,?,?)");
    			p.setString(1,list[0]);	
    			p.setString(2,list[1]);
    	        p.setDate(3, sqlDate);
    	        p.executeUpdate();
    	      
    		}
    	       		
